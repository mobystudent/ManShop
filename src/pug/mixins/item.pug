mixin item(obj)
	article.item
		+picture(`${obj.img}`, 'item')
		.item__content
			.item__gallery.slider.slider--gallery
				.slider__arrow.slider__arrow--prev
					svg.icon.icon--arrow.icon--arrow-slider
						use.icon__item(xlink:href='#arrow')
				.slider__content
					
					- for (let i = 0; i < 6; i++)
						+picture(`gallery-${i+1}`, 'gallery')
							
				.slider__arrow.slider__arrow--next
					svg.icon.icon--arrow.icon--arrow-slider
						use.icon__item(xlink:href='#arrow')
			.item__info
				small.item__category(data-category!= obj.category.value)!= obj.category.title
				a.item__name(href="#")!= obj.name
				.item__price
					small.item__sign
						| $
					small.item__count-price(data-price!= obj.price)!= obj.price
				.item__left
					small.item__store
						| на складе:&nbsp
					small.item__count-store!= obj.left
